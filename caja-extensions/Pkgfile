# Description: caja extensions meta package
# URL:
# Maintainer:
# Depends on: caja-extensions-common caja-image-converter caja-open-terminal caja-sendto caja-share caja-wallpaper caja-xattr-tags

name=caja-extensions
version=1.20.0
release=1
source=(http://pub.mate-desktop.org/releases/1.20/caja-extensions-$version.tar.xz)

build() {
    #install -d -m 0755 $PKG/etc
    #echo "MATE $version" > $PKG/etc/mate_version
    cd $name-$version
    sed -i -e 's,USE_NLS=yes,USE_NLS=no,g' \
    -e 's,ENABLE_NLS 1,ENABLE_NLS 0,g' configure
    sed -i -e '/^SUBDIRS/s/ docs//g' Makefile.in
    sed -i -e '/PKG_CONFIG/s,enchant ,enchant-2 ,g' configure
    ./configure \
        --prefix=/usr \
        --disable-schemas-compile \
        --disable-nls

    sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
    make
    make DESTDIR=$PKG install
}
